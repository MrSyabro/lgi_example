{
    "app-id" : "org.example.App",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "42",
    "sdk" : "org.gnome.Sdk",
    "command" : "lgi_example",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	{
		"name" : "luajit",
	    	"buildsystem" : "simple",
	    	"build-commands" : [
	    		"pwd",
	    		"make -j4",
	    		"make install PREFIX=/app -j4"
	    	],
	   	"sources" : [
	        	{
				"type" : "archive",
				"url" : "https://luajit.org/download/LuaJIT-2.0.5.tar.gz",
				"sha256" : "874b1f8297c697821f561f9b73b57ffd419ed8f4278c82e05b48806d30c1e979"
			}
		]
	},
	{
		"name" : "lgi",
		"buildsystem" : "meson",
		"sources" : [
			{
				"type" : "git",
				"url" : "https://github.com/lgi-devs/lgi.git"
			}
		]
	},
        {
            "name" : "lgi_example",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/MrSyabro/lgi_example.git"
                }
            ]
        }
    ]
}
